{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "printWidth": 500,
  "bracketSpacing": false,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "strict",
  "endOfLine": "lf",
  "proseWrap": "never",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "printWidth": 500,
        "htmlWhitespaceSensitivity": "strict",
        "bracketSpacing": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
